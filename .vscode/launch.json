{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "React Development Server",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "preLaunchTask": "npm: start",
      "postDebugTask": "npm: stop"
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "pathMapping": {
        "/": "${workspaceFolder}/",
        "/src": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Node: Current File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/script.js",
      "restart": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Run & Debug",
      "configurations": ["React Development Server"],
      "stopOnEntry": false
    }
  ]
}
